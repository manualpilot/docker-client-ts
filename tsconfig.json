{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "baseUrl": ".",
    "declarationDir": "dist",
    "outDir": "dist",
    "composite": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src"
  ]
}
